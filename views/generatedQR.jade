extends layout

block content
  h1= title
  div.container
    div.title This is your ticket
    div#qrcode
    a.back(href="/registration") Go to registration
    p.hint Take a screenshot or print this code and bring it to the party. Thats all :)
  script(type="text/javascript").
    var qrcode = new QRCode("qrcode");
    var value = '#{cryptedQRString}'
    if(value){
      qrcode.makeCode(value)
    }
    else{
      $('.title').hide();
      $('.hint').hide();
      $('#qrcode').html('Error! Please try again')
      $('.back').show()
    }
